_name=imgcomp
pkgname=imgcomp
pkgver=2.0
pkgrel=1
pkgdesc='Cross platform image compressing tool'
arch=('any')
license=("MIT")
makedepends=('cmake' 'git')
source=("git+https://github.com/rafi612/"${pkgname}".git")
sha512sums=("SKIP")

prepare() {
    cd "${pkgname}"
    mkdir -vp build
    git submodule init
    git submodule update
}

build() {
    cd "${pkgname}/build"
    cmake ../
    make
}

package() {
    cd "${pkgname}/build"
    make DESTDIR="$pkgdir" install
    chmod +x "$pkgdir/usr/bin/imgcomp"
}
